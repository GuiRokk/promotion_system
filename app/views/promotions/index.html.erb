<h1><%= Promotion.model_name.human(count:2)%></h1>
<div>
  <%= link_to t('buttons.back'), root_path , class: 'btn'%>
  <%= link_to t('buttons.register', model: @promotions.model.model_name.human), new_promotion_path, class: 'btn'%>
</div>
<br>
<div id="search">
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :query %>
    <%= f.submit t('buttons.search') %>
  <% end %>
</div>

<div>
  <% if Promotion.all.empty? %>
    <h3><p><%= t('.empty') %></p></h3>
  <% else %>
    <h3><%= Promotion.all.size %> <%=t('.active_promotions') %></h3>
  <% end%>
</div>

<dl>
  <% @promotions.each do |promotion| %>
    <%=link_to promotion.name, promotion,class: 'btn'%> 
    <br>
  <% end %>
</dl>