<div class='devise-box'>
  <h1>Cadastro</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
    <%= render "devise/shared/error_messages", resource: resource %>
    <ul><%= flash[:alert] %></ul>
    <div class="user-box",>
    <br>
      <%= f.text_field :name, autofocus: true, placeholder: User.human_attribute_name(:name)%>
    </div>
    <br>
    <div class="user-box">
      <%= f.email_field :email, autocomplete: "email", placeholder: :email%>
    </div>
    <div class="user-box">
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", 
      placeholder: User.human_attribute_name(:password)%>
    </div>
    <br>
    <div class="user-box">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
      placeholder: User.human_attribute_name(:password_confirmation)%>
    </div>
    <br>
    <br>
    <div>
      <%= f.submit t('buttons.register_user'), class:"actions" %>
    </div>
  <% end %>
</div>
<%# render "devise/shared/links" %>