<h1>Produtos</h1>
<div>
  <%= link_to 'Voltar', root_path, class: 'btn' %>
  <%= link_to 'Registrar produto', new_product_category_path, class: 'btn' %>
</div>

<p><%= flash[:notice] %></p>

<div>
  <% if @products.empty?%>
    <h3>Nenhum produto cadastrado</h3>
  <% else %>
    <h3>Produtos registrados</h3>
  <% end %>
</div>
<dl>
  <% @products.each do |product| %>
    <dt><%=  link_to product.name, product, class: 'btn' %></dt>
  <% end %>
</dl>