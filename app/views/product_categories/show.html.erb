<div>
  <%= link_to t('buttons.back'), product_categories_path, class: 'btn' %>
  <%= link_to t('buttons.edit', model: ProductCategory.model_name.human), edit_product_category_path(@product), class: 'btn' %>
  <%= link_to t('buttons.delete', model: ProductCategory.model_name.human), product_category_path(@product), method: :delete, class: 'btn' %>
</div>
<br>
<table class='table'>
  <thead>
    <tr>
      <th><%= ProductCategory.human_attribute_name(:name) %></th>
      <th><%= ProductCategory.human_attribute_name(:code) %></th>
    </tr>
  </thead>
  <tbody>
     <tr class='data'>
      <th><%= @product.name %></th>
      <th><%= @product.code %></th>
    </tr> 
  </tbody>
</table>